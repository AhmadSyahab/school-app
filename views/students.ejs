<!DOCTYPE html>
<html>
<head>
	<title>Students</title>
</head>
<body>
<h1> ALL STUDENT DATA</h1>
<h4> <a href ="/students/add"> add student</a>	</h4>	
	<table border="1" width="70%">
		<thead>
			<tr>
				<th> id </th>
				<th> first_name </th>
				<th> last_name </th>
				<th> fullname </th>
				<th> email </th>
				<th colspan="2"> options </th>
			</tr>
		</thead>
		<tbody>
			<% allStudents.forEach(student => {%>	
			<tr>
				<td> <%= student.id %> </td>
				<td> <%= student.first_name  %> </td>
				<td> <%= student.last_name  %> </td>
				<td> <%= student.getFullName() %> </td>
				<td> <%= student.email  %> </td>
				<td> <a href="/students/edit/<%= student.id %>"> edit </td>
				<td> <a onclick= "return deleteConfirm()" href="/students/delete/<%= student.id %>"> hapus </td>	
			</tr>	
			<%})%>
		</tbody>	
	</table>	
	<script type="text/javascript">
		function deleteConfirm(){
			let ask = confirm("Delete this Student? ");
			if (ask == true) return true;
			else return false;
		}
	</script>
</body>
</html>